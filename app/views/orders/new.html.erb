<div class="container" style="text-align: center fo" >


  


<%= form_for :order, url: product_orders_path(params[:product_id])do |f| %>

  <p>
    <%= f.label :pro_name,Product%><br>
    <%= f.text_field :pro_name %>
 
    
  </p>
 
  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>

  </p>
  <p>
    <%= f.label :units %>: 
  
  <%= f.select(:units, options_for_select(['5', '4', '3', '2', '1'], 3), {},style: "width: 30px") %> 
  </p>
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
