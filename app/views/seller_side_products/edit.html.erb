<div class="container" >
<%= form_for @product_seller, url: seller_side_product_path(@product_seller), method: :patch, html: { multipart: true } do |f| %>
  <p>
    <%= f.label :pro_name %><br>
    <%= f.text_field :pro_name %>
  </p>
 
  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :units %>: 
  
  <%= f.select(:units, options_for_select(['5', '4', '3', '2', '1'], 3), {},style: "width: 30px") %> 
  </p>
  <p>
    
     <%= f.file_field :avatar %>
     
  </p>
  
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
</div>
